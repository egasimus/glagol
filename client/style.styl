*
  box-sizing border-box
  position relative

body, table, input, select, textarea, button
  font-family monospace
  font-size 12px
  margin 0
  padding 0

table
  margin 6px 0
  padding 0 3px
  min-width 100%

td, th
  text-align left
  vertical-align top

th
  font-weight bold
  text-transform uppercase
  letter-spacing 1px
  padding-bottom 3px

button
  font-weight bold
  background white
  border 2px solid #555
  color #111
  margin 3px
  padding 3px 6px
  cursor pointer

input[type=text]
  font-weight bold
  background white
  border none
  border-bottom 2px solid #aaa
  text-align center
  color #333

.ButtonLink
  color #888
  text-decoration none
  border-bottom 1px dotted #888
  cursor pointer
  &:hover
    color #555
    border-bottom-style solid

.App
  &.Blank
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center

.TabBar
  display flex
  background #ddd

.Tab
  flex-grow 1
  padding 6px
  &.Active
    border-bottom 2px solid #555
  &:hover
    background #eee
  &Add
    flex-grow 0
    width 36px
    line-height 28px
    font-size 24px
    text-align center
    cursor pointer

.Node
  &Name
    white-space pre-wrap
