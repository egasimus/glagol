*
  box-sizing border-box
  position relative

body
  background url("http://subtlepatterns2015.subtlepatterns.netdna-cdn.com/patterns/noisy_net.png")

body, table, input, select, textarea, button
  font-family monospace
  font-size 12px
  margin 0
  padding 0

td, th
  text-align left
  vertical-align top

th
  font-weight bold
  text-transform uppercase
  letter-spacing 1px
  padding-bottom 3px

button
  font-weight bold
  background white
  border 2px solid #555
  color #111
  margin 3px
  padding 3px 6px
  cursor pointer

input[type=text]
  font-weight bold
  background white
  border none
  border-bottom 2px solid #aaa
  text-align center
  color #333

.ButtonLink
  color #888
  text-decoration none
  border-bottom 1px dotted #888
  cursor pointer
  &:hover
    color #555
    border-bottom-style solid

.App
  height 100%
  display flex
  flex-direction column
  &.Blank
    justify-content center
    align-items center


// tabs
.Tab

  // tab bar
  &Bar
    flex-shrink 0
    display flex
    background #888
    height 24px

  // tab
  &
    background #ddd
    flex-grow 1
    margin 0 3px
    display flex
    justify-content space-between
    align-items center
    cursor pointer
  &.Active
    font-weight bold
  &:hover, &Add:hover
    background #e0e0e0
  &Text
    padding 0 6px
  &Connected, &NotConnected
    width 12px
    height 12px
    border-radius 100%
    &:after
      color #777
      margin-left 15px
      line-height 11px
      text-transform uppercase
      letter-spacing -1px
      background white
      padding 3px 6px
      border-radius 3px
      white-space nowrap
  &NotConnected
    background #dd5555
    &:after
      content 'not connected'
    &:hover:after
      content 'connect'
  &Connected
    background #aadd55
    &:after
      content 'connected'
    &:hover:after
      content 'reconnect'
  &Close
    background none
    border none
    width 30px
    height 30px
    text-align center
    margin 0 3px 0 0
    color #777
    border-radius 24px
    &:hover
      background white

  // new tab button
  &Add
    flex-grow 0
    width 18px
    height 18px
    line-height 18px
    font-size 24px
    text-align center
    cursor pointer
    margin 3px 3px 3px 0
    background #aaa
    border-radius 24px

.Node
  &Name
    white-space pre-wrap
  &Source, &Compiled, &Value
    white-space pre-wrap

.StatusBar
  flex-shrink 0
  display flex
  flex-direction row
  height 24px
  background #ddd
  justify-content space-between
  &Navigation, &Presentation
    display flex
    flex-direction row
  &Button
    cursor pointer
    margin-top 2px
    margin-bottom 2px
    line-height 18px
    padding 1px 6px
    background #eee
    border-radius 3px
    font-size 0.9em
  &Navigation > &Button
    margin-left 6px
    margin-right 0
  &Presentation > &Button
    margin-left 0
    margin-right 6px

.MainView
  display flex
  flex-grow 1

.Frame
  background #ddd
  color #333
  display flex
  flex-direction column
  border-right 1px solid #eee
  &Header
    background #ddd
    display flex
    align-items center
    flex-shrink 0
    padding 0 3px
  &Title, &Address
    font-size 18px
    font-family serif
    font-style italic
    padding 0 3px
    margin 0
    font-weight bold
  &Address
    display inline-block
    background none
    border none
    padding 0
    border-bottom 1px dotted #aaa
    &:hover, &:focus
      background white
    &:focus
      outline none
      border-bottom 1px solid #aaa
  &Status
    margin 0 6px
    background #ddd
    padding 3px 6px
  &Close
    font-size 30px
    opacity 0.5
    cursor pointer
    &:hover
      opacity 0.7
      background #fff
  &Body
    overflow auto
    flex-grow 1
    > table
      background white

.Frames
  flex-grow 1
  display flex
  overflow auto
  &Toolbar
    background #ddd
    width 24px
    display flex
    flex-direction column-reverse

.SourceEditor
  &Input
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    opacity 0.5
    background none
    border none

.Blank
  background white
  h1
    font-family serif
    font-style italic
    font-size 6em
    margin 0

.Sidebar
  background #ddd
  font-family sans
  &Section
    padding 6px
    border-bottom 1px solid #ccc
    &Header
      font-family serif
      font-style italic
      font-size 1.5em
      cursor pointer
  &Button
    cursor pointer
    &:hover
      background #f0f0f0
      border-radius 3px
      margin 0 -3px
      padding 0 3px

.Glagol
  padding 0 6px
  &, &Connect
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &Connect
    cursor pointer
    display flex
    flex-direction column
    text-align center
    justify-content center
    &:hover
      text-shadow 0 0 6px white
    &Icon
      font-size 6em
