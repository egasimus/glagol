* 
  box-sizing border-box

body
  font-family Open Sans
  font-size 12px
  background #1d1f21
  color #eee
  margin 0
 
.sampler
  margin 12px
  height 240px
  display flex

  &-waveform
    flex-grow 1
    background rgb(189, 195, 199)

  &-controls
    width 180px
    background rgb(140, 152, 153)

  &-label
    padding 6px 12px
    background rgb(39, 174, 96)
    font-weight bold
    text-transform uppercase

  &-button
    margin 6px 6px 0
    display block
    height 48px
    color #333
    border 1px solid #888;
    background rgba(255,255,255,0.3)
    text-align center
    line-height 46px

.toolbar
  display         flex
  justify-content space-between
  padding         12px 6px 0

  .section
    display flex

    .btn
      cursor  pointer
      padding 3px 6px
      margin  0 3px
      &:hover
        background rgba(0,0,0,0.3)

.sequencer
  margin      12px
  display     flex
  align-items center

  &-label
    font-weight bold
    width       72px

  &-body
    flex-grow  1
    background rgba(0,0,0,0.3)
    height     30px
    display    flex

  &-cell
    flex-grow 1
    &:hover
      background rgba(255,255,255,0.1)
    &.active
      background    linear-gradient(to bottom, tomato, red)
      border-radius 2px
      border-top    1px solid rgba(255,255,255,0.5)
      &:hover
        background red

.pads-and-editor
  display block

.pad-editor
  background #151617
  border-top 2px solid rgba(255,255,255,0.33)
  box-shadow 0 3px 6px rgba(0,0,0,0.6)
  margin     12px 12px 12px 18px

.pads
  display   flex
  flex-wrap wrap
  margin    6px 0 0 6px

  .pad
    box-shadow    0 2px 6px rgba(0,0,0,0.5)
    cursor        pointer
    width         72px
    height        48px
    margin        6px 0 0 6px
    border-radius 6px

  .pad
    transition    0.2s opacity ease-in, 0.2s border-top ease-in;
    opacity 0.5
    &:hover
      opacity 0.9
    &.selected
      opacity 1

  .pad.add
    text-shadow 0 -2px 6px #444
    line-height 48px
    font-size   48px
    color       rgba(127,127,127,0.3)
    text-align  center
    &:hover
      color     rgba(127,127,127,0.5)

  .pad.empty
    background #151617
    border-top 2px solid rgba(33,33,33,1)
    &:hover
      border-top 2px solid rgba(255,255,255,0.15)
    &.selected
      border-top 2px solid rgba(255,255,255,0.33)
      box-shadow 0 3px 6px rgba(0,0,0,0.6)
