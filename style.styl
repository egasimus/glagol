* 
  box-sizing border-box
  position   relative

body
  font-family Open Sans
  font-size 12px
  //background url('http://distortedarts.com/wp-content/uploads/2013/03/the-city-rises-1911.jpg')
  background #151617
  background-size cover
  color #eee
  margin 0

  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

.app
  display        flex
  flex-direction column
  min-height     100%

 .main
  flex-grow 1
  outline none

.flex
  display flex
  &.col
    flex-direction column
  &.row
    flex-direction row

.toolbar
  width      100%
  background #070707
  padding    6px

  display         flex
  justify-content space-between

  .section
    display flex

    .btn
      cursor  pointer
      padding 3px 6px
      margin  0 3px
      &:hover
        background rgba(0,0,0,0.3)

.search
  max-width 25%
  z-index   1
  overflow  hidden
  float     left
  padding   12px

  .searcher
    display block
    width   100%

    border: none;
    background: none;
    color: white;

    font-size: 24px;
    border-bottom: 2px solid rgba(255,255,255,0.5);
    outline: none;

.results
  display block
  margin 6px 0
  .result
    padding 3px 0
    margin 0
    cursor pointer
    &:hover
      background rgba(255,255,255,0.15)
    &-page
      cursor pointer
      display inline-block
      padding 0 3px
      margin 0 3px 3px 0
      background #222
      &:hover
        background #333

.samplers
  display: flex;
  flex-wrap: wrap;
  margin: 12px 0 0;

  .sampler
    transition: background 0.1s;
    //width: 180px;
    margin: 0 18px 18px 0;
    padding: 6px 12px;
    //height: 120px;
    //background: white;
    color: rgba(0,0,0,0.8);
    box-shadow: 0 3px 6px rgba(0,0,0,0.5);
    cursor: pointer;
    text-align: center;
    display flex
    flex-direction column
    justify-content space-between
    background    linear-gradient(to bottom, orangered, red)
    border-radius 2px
    border-top    1px solid rgba(255,255,255,0.5)

    &:before
      content: attr(data-key);
      position: absolute;
      top: 0;
      left: 3px;
      font-size: 10px;
      font-weight: bold;

    &:hover
      background red

    &-path-part
      display none
      &:last-child
        display block
        font-weight bold

    &-path-part:last-child
      font-weight bold

//////////////////////
.sampler-old
  margin 12px
  height 240px
  display flex

  &-waveform
    flex-grow 1
    background rgb(189, 195, 199)

  &-controls
    width 180px
    background rgb(140, 152, 153)

  &-label
    padding 6px 12px
    background rgb(39, 174, 96)
    font-weight bold
    text-transform uppercase

  &-button
    margin 6px 6px 0
    display block
    height 48px
    color #333
    border 1px solid #888;
    background rgba(255,255,255,0.3)
    text-align center
    line-height 46px

.file-browser
  padding 12px
  .file
    display          inline-block
    margin           3px 6px
    padding          3px 12px
    background-color rgba(255,255,255,0.1)
  .total
    font-style italic
  .search
    color         white
    background    none
    outline       none !important
    display       block
    border        none
    border-bottom 1px solid #333
    width         auto
    font-size     24px

.sequencer
  margin      12px 0 0
  display     flex
  align-items center

  &-label
    position: absolute;
    z-index: 1;
    color: rgba(0,0,0,0.6);
    margin-left: 3px;
    font-weight bold

  &-body
    flex-grow  1
    background rgba(0,0,0,0.3)
    height     30px
    display    flex

  &-cell
    flex-grow 1
    &:hover
      background rgba(255,255,255,0.1)
    &.active
      background    linear-gradient(to bottom, orangered, red)
      border-radius 2px
      border-top    1px solid rgba(255,255,255,0.5)
      &:hover
        background red

.pads-and-editor
  display block

.pad-editor
  background #151617
  border-top 2px solid rgba(255,255,255,0.33)
  box-shadow 0 3px 6px rgba(0,0,0,0.6)
  margin     12px 12px 12px 12px

.pads
  display   flex
  flex-wrap wrap
  margin    6px 0 0 6px

  .pad
    box-shadow    0 2px 6px rgba(0,0,0,0.5)
    cursor        pointer
    width         72px
    height        48px
    margin        6px 0 0 6px
    border-radius 6px

  .pad
    transition    0.2s opacity ease-in, 0.2s border-top ease-in;
    opacity 0.5
    &:hover
      opacity 0.9
    &.selected
      opacity 1

  .pad.add
    text-shadow 0 -2px 6px #444
    line-height 48px
    font-size   48px
    color       rgba(127,127,127,0.3)
    text-align  center
    &:hover
      color     rgba(127,127,127,0.5)

  .pad.empty
    background #151617
    border-top 2px solid rgba(33,33,33,1)
    &:hover
      border-top 2px solid rgba(255,255,255,0.15)
    &.selected
      border-top 2px solid rgba(255,255,255,0.33)
      box-shadow 0 3px 6px rgba(0,0,0,0.6)
