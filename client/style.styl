*
  box-sizing border-box
  position relative

body, table, input, select, textarea, button
  font-family monospace
  font-size 12px
  margin 0
  padding 0

table
  margin 6px 0
  padding 0 3px
  min-width 100%

td, th
  text-align left
  vertical-align top

th
  font-weight bold
  text-transform uppercase
  letter-spacing 1px
  padding-bottom 3px

button
  font-weight bold
  background white
  border 2px solid #555
  color #111
  margin 3px
  padding 3px 6px
  cursor pointer

input[type=text]
  font-weight bold
  background white
  border none
  border-bottom 2px solid #aaa
  text-align center
  color #333

.ButtonLink
  color #888
  text-decoration none
  border-bottom 1px dotted #888
  cursor pointer
  &:hover
    color #555
    border-bottom-style solid

.App
  &.Blank
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center


// tabs
.Tab

  // tab bar
  &Bar
    display flex
    background #ddd

  // tab
  &
    flex-grow 1
    margin 0 3px
    display flex
    justify-content space-between
    align-items center
    cursor pointer
  &.Active
    border-bottom 2px solid #555
  &:hover, &Add:hover
    background #eee
  &Text
    padding 0 6px
  &Close
    background none
    border none
    width 30px
    height 30px
    text-align center
    margin 0 3px 0 0
    color #777
    border-radius 24px
    &:hover
      background white

  // new tab button
  &Add
    flex-grow 0
    width 36px
    line-height 28px
    font-size 24px
    text-align center
    cursor pointer

.Node
  &Name
    white-space pre-wrap
