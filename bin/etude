#!/usr/bin/env node

var resolve =
      require('path').resolve
  , glagol =
      require('glagol')
  , options =
      { eslisp:
        { transform:
          [ require('eslisp-dotify')
          , require('eslisp-camelify')
          , require('eslisp-propertify') ] } }
  , app =
      glagol(resolve(__dirname, '../server'), options)
  , common =
      glagol(resolve(__dirname, '../common'), options)

app.nodes.lib    = common.nodes.lib;
app.nodes.models = common.nodes.models;

app().main(app);
