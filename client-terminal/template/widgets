  (fn [] (let
    [box (./bless/Box { :right 15 :width 3 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
