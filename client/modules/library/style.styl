.library
  input
    display block
    width 100%
    padding 6px

.results
  padding 0
  margin 0
  list-style none

  .result-group
    padding-top 6px
    &-header
      font-weight bold
      padding 0
    &-items
      list-style none
      margin 0
      padding 0

  .result
    padding 0
    margin 0
    cursor pointer
    &:hover
      background rgba(255,255,255,0.15)
    &-page
      cursor pointer
      display inline-block
      padding 0 3px
      margin 0 3px 3px 0
      background #222
      &:hover
        background #333

