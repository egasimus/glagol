(let [jack
        (require "etude-jack")
      osc
        (require "osc")
      osc-config
        { :localAddress "localhost"
          :localPort    11025 }
      osc-client
        (new osc.UDPPort osc-config)
      Q
        (require "q")
      send-osc
        (fn [host port addr & args]
          (osc-client.send { :address addr :args args } host port))]
  (osc-client.open)
  { :jack
      (jack.init)
    :spawn
      jack.spawn
    :client
      jack.client
    :connect
      jack.connect-by-name
    :system
      jack.system
    :play
      (fn [port] (send-osc "localhost" port "/play" 0 0) 8) })
