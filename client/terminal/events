(let [emitter (new (.-EventEmitter2 (require "eventemitter2")))
      on      (emitter.on.bind emitter)]

  (on :exit    (fn [] (log "bye") (process.exit)))
  (on :refresh (fn [] (./screen/realloc) (./screen/render)))
  ;(on :add-sample (fn [id] (log id) (log (aget ./state/browser id))))

  emitter)
