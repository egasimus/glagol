(fn template-samplers [state]
  (let [path    (require "path")
        sampler (fn [f] [ :sampler {} (path.relative ../options/sounds-dir f) ])]
    (.concat [ :samplers {} [ :sampler {} :empty ] [ :sampler {} :empty ] ]
      (state.map sampler))))
  
  ;(log (conj [ ".samplers" {} ]
    ;(state.map (fn [f] [ ".sampler" {} (.basename (require "path") f) ]))))
  ;[ ".samplers" {} ])

