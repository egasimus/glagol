        (./bless/Box  { :left 0 :right 0 :top 2 :height 1 :ch "▀" :bg nil :fg "#111111"}) ]
      (box.append.bind box) )
    box))

  ".toolbar-kbd"
  (fn [] (let
    [box (./bless/Box { :right 34 :width 5 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
        (./bless/Text { :left 1 :right 1 :top 1 :height 1 :bg "#111111" :fg :yellow :content "KBD"})
