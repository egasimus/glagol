  flex-direction row
  flex-wrap wrap
  color white
  align-items center
  svg.waveform
    display block
    width 100%
    height 72px
  &_Title
    margin 0 3px
    font-size 18px
    font-weight bold
  &_Position
    margin 0 12px
    width 4em
    text-align center
  &_Button
    button()
    margin 0 6px 6px
    font-size 30px
