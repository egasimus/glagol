@import '../../../core/client/styles/vars.styl'
@import '../../../core/client/styles/mixins.styl'

.AudioPlayer
  flex-grow 1
  display flex
  flex-flow column wrap
  color white
  align-items flex-start
  &_Section
    display flex
    flex-flow row wrap
    padding 3px 6px 3px 3px
    width 100%
  &_Header
    display flex
    flex-flow row wrap
    align-items center
    padding 3px 6px 3px 0
    &>i
      margin-left 3px
  &_Toolbar
    frame-toolbar()
    padding 0
    button
      width 42px
  svg.waveform
    display block
    width 100%
    height 72px
  &_Title
    margin-left 6px
    line-height 42px
    height 42px
    font-size 18px
    font-weight bold
    flex-grow 1
  &_Position
    margin 0 6px
    height 42px
    line-height 14px
    flex-shrink 0
    text-align center
    white-space pre
    font-family monospace
    letter-spacing 1px
  &_Button
    &_Play, &_Cue
      width 42px
      font-size 30px
      line-height 30px
    &_Play
      &.Playing
        background #ccaa26
        color white
        &:hover
          text-shadow 0 0 3px white, 0 0 3px white
    &_Cue
      font-size 1.2em
      letter-spacing 1px
      font-weight bold
  &_ProgressBar
    width 100%
    height 36px
    margin 0 3px 6px
    cursor text
    &_Background
      background #222
      background rgba(255,255,255,0.05)
      width 100%
      height 100%
    &_Foreground
      background #ccaa26
      position absolute
      left 0
      top 0
      bottom 0
  audio
    display none
  &_Waveform, canvas
    width 100%
    height 100px
  &_Spectrogram
    margin 6px
  &_Info, &_Cues
    width 50%
    display flex
    flex-direction row
    padding 0 3px
  &_Info
    border-left 1px solid rgba(255,255,255,0.2)
    &_Table
      color #ddd
      margin 0 3px
      line-height 14px
    &_Toggle
      button()
      width 42px
      height 36px
      margin 3px
  &_Cues
    &_Toolbar
      flex-shrink 0
    &_Add
      button()
      width 42px
      height 36px
    &_List
      display flex
      flex-direction column
      width 100%
  &_Cue
    line-height 12px
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    margin-left 6px
    &:hover
      background rgba(255,255,255,0.2)
    &_Number
      padding 3px
      font-size 1.2em
      cursor pointer
      margin-right 6px
      width 36px
      display inline-block
      text-align center
      &:hover
        background rgba(255,255,255,0.2)
    &_Time
      font-family monospace
      padding 0 3px
      letter-spacing 1px

.Sequencer
  &_Section
    display flex
    flex-flow row
    align-items center
    padding 0 3px
  &_Title
    flex-grow 1
    margin-left 3px
  &_Patterns
    padding 0 6px 0 3px
  &_Pattern
    padding 6px 3px
    margin 6px 0
    border 1px solid #888
  &_Sequence
    flex-grow 1
    border-top 1px solid rgba(0,0,0,0.5)
    margin 0 3px 6px
    background rgba(0,0,0,0.1)
  &_Track
    height 23px
    border-bottom 1px solid rgba(0,0,0,0.5)
    display flex
    &_Label
      background rgba(0,0,0,0.2)
      line-height 23px
      padding 0 8px
  &_Grid
    border-right 1px solid rgba(0,0,0,0.9)
    &:nth-child(2n-1)
      border-right 1px solid rgba(0,0,0,0.3)
  &_Track, &_Grid
    &:hover
      background rgba(255,255,255,0.05)
