*
  box-sizing border-box

body
  background #f8f8f8
  color #424242
  margin 6px 0
  font-family monospace
  font-size 13px
  line-height 18px


.form
  position relative
  padding 5px
  margin-left 48px
  display block
  cursor pointer
  &:hover 
    background #f0f0f0

  label
    position absolute
    display inline-block
    top 7px
    height 20px
    width auto
    right 100%
    text-transform uppercase
    font-size 0.75em
    text-align right
    color #5f5f5f
    padding-right 3px

  .name
    font-weight bold

  .code
    white-space pre
    border 1px solid transparent
    background transparent
    &.editing
      background white
    &:focus
      border 1px solid #ddd;
      outline none

.bar
  position fixed
  bottom 0
  left 0
  right 0
  height 24px
  background #ddd
  display flex

  &-file
    height 24px
    line-height 24px
    padding 0 6px
    cursor pointer

    &.active
      background #f8f8f8

    &:hover
      background #fff
