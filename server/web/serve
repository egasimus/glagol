(fn serve [req res]
  (let [send-data (require "send-data")
        url (require "url")
        document (fn [content] (str
          "<head><meta charset=\"utf-8\"></head><body><script>"
          content "</script>"))
        body (str
          "document.write('loading...!');"
          "setTimeout(function(){window.location.reload()}, 2000)")
        respond (fn [req res]
          (let [embed? (.-query.embed (url.parse req.url true))
                body   (if embed? body (document body))]
            (send-data req res
              { :body    body
                :headers { "Content-Type"
                             (str "text/" (if embed? "javascript" "html")
                               "; charset=utf-8")} })))]
    (respond req res body)))

