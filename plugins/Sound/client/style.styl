@import '../../../core/client/styles/vars.styl'
@import '../../../core/client/styles/mixins.styl'

.AudioPlayer
  flex-grow 1
  display flex
  flex-flow column wrap
  color white
  align-items flex-start
  &_Section
    display flex
    flex-flow row wrap
    padding 3px
    width 100%
  &_Header
    display flex
    flex-flow row wrap
    align-items center
    padding 3px 6px 3px 0
    &>i
      margin-left 3px
  &_Toolbar
    frame-toolbar()
    padding 0
    button
      width 42px
  svg.waveform
    display block
    width 100%
    height 72px
  &_Title
    margin-left 6px
    line-height 42px
    height 42px
    font-size 1.2em
    font-weight bold
    flex-grow 1
  &_Position
    margin-left 6px
    height 42px
    line-height 12px
    padding 3px 0
    flex-shrink 0
    text-align center
    white-space pre
    letter-spacing 1px
    font-size 11px
  &_Button
    &_Play, &_Cue
      margin-right 3px
      width 42px
      font-size 30px
      line-height 30px
    &_Play
      &.Playing
        background #ccaa26
        color white
        &:hover
          text-shadow 0 0 3px white, 0 0 3px white
    &_Cue
      font-size 1.2em
      letter-spacing 1px
      font-weight bold
  &_ProgressBar
    width 100%
    height 36px
    cursor text
    &_Background
      background #222
      background rgba(255,255,255,0.05)
      width 100%
      height 100%
    &_Foreground
      background #ccaa26
      position absolute
      left 0
      top 0
      bottom 0
  audio
    display none
  &_Waveform, canvas
    width 100%
    height 100px
  &_Spectrogram
    margin 6px
  &_Info, &_Cues
    width 50%
    display flex
    flex-direction row
  &_Info
    border-left 1px solid rgba(255,255,255,0.2)
    &_Table
      color #ddd
      margin 0 3px
      line-height 14px
    &_Toggle
      button()
      width 42px
      height 36px
      margin 3px
  &_Cues
    &_Toolbar
      flex-shrink 0
    &_Add
      button()
      width 42px
      height 36px
    &_List
      display flex
      flex-direction column
      width 100%
  &_Cue
    line-height 12px
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    margin-left 6px
    &:hover
      background rgba(255,255,255,0.2)
    &_Number
      padding 3px
      font-size 1.2em
      cursor pointer
      margin-right 6px
      width 36px
      display inline-block
      text-align center
      &:hover
        background rgba(255,255,255,0.2)
    &_Time
      padding 0 3px
      letter-spacing 1px

.Sequencer
  &_Button
    &_Play, &_Stop
      margin-right 3px
      line-height 36px
  &_Section
    display flex
    flex-flow row
    align-items center
    padding 0 3px
  &_Title
    flex-grow 1
    margin-left 3px
  &_Patterns
    padding 0 6px 0 3px
  &_Pattern
    padding 6px 3px
    margin 6px 0
    border 1px solid #888
  &_Sequence
    flex-grow 1
    border-top 1px solid rgba(0,0,0,0.5)
    margin 0 3px 6px
    background #333
    border 1px solid #555
    box-shadow 0 1px 2px #000
    min-width 400px
  &_Track
    height 23px
    border-bottom 1px solid rgba(0,0,0,0.5)
    display flex
    &_Label
      background rgba(0,0,0,0.2)
      line-height 23px
      padding 0 8px
  &_Grid
    border-right 1px solid rgba(0,0,0,0.9)
    &:nth-child(2n)
      border-right 1px solid rgba(0,0,0,0.3)
  &_Track, &_Grid
    &:hover
      background rgba(255,255,255,0.05)

.Mixer
  min-width 330px
  &_Toolbar
    line-height 38px
    padding 0 9px 0 12px
    font-weight bold
  &_Selector
    flex-grow 1
    margin-left 9px
    background none
    color #ddd
    border none
    &:focus
      background rgba(255,255,255,0.2)
      outline none
  &_Channels
    display flex
    flex-direction row
    margin-right 6px
  &_Sidebar
    &_Channel
      background rgba(0,0,0,0.3)
      padding 6px
      margin-bottom 3px
  &_Channel_Strip
    display flex
    flex-direction column
    margin 0 0 0 3px
    background rgba(0,0,0,0.3)
    width 192px
    flex-wrap wrap
    height 368px
  &_Knob
    cursor pointer
    &:before
      content ''
      width 30px
      display block
      background #333
      border 1px solid #555
      box-shadow 0 1px 2px #000
      height 30px
      border-radius 36px
    &:after
      content ''
      background #555
      position absolute
      top 3px
      height 50%
      left 50%
      right 50%
      margin 0 -2px
    &_Label
      display flex
      align-items center
      justify-content space-between
      background rgba(0,0,0,0.3)
      padding 6px
      flex-direction row-reverse
      &_Text
        text-align right
        padding 0 6px
        text-transform uppercase
        letter-spacing 1px
        color #aaa
    &_Group
      &, &_WithFader
        margin 0 3px 3px 0
        display flex
        flex-direction column
      &_WithFader
        flex-grow 1
      :nth-child(2n)
        flex-direction row
        .Mixer_Knob_Label_Text
          text-align left
      select
        background none
        border none
        color #ddd
        height 30px
        line-height 18px
        margin 6px
  &_FaderAndMeter
    min-height 100px
    flex-grow 1
    background rgba(0,0,0,0.3)
    display flex
  &_Fader,
  &_Meter
    width 50%
  &_Fader
    &:before
      content ''
      position absolute
      left 50%
      right 50%
      top 0
      bottom 0
      margin 0 -1px
      background #111
    &:after
      content ''
      top 20%
      height 18px
      position absolute
      left 6px
      right 6px
      background #333
      box-shadow 0 1px 2px #000
      border 1px solid #555
  &_Meter
    &:before
      content ''
      background #111
      position absolute
      top 3px
      bottom 3px
      left 3px
      right 3px
    &:after
      content ''
      background #141414
      position absolute
      top 6px
      bottom 6px
      left 6px
      right 6px
