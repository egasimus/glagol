* 
  box-sizing border-box

body
  font-family Open Sans
  font-size 12px
  background #1d1f21
  color #eee
  margin 0
 
.sampler
  margin 12px
  height 240px
  display flex

  &-waveform
    flex-grow 1
    background rgb(189, 195, 199)

  &-controls
    width 180px
    background rgb(140, 152, 153)

  &-label
    padding 6px 12px
    background rgb(39, 174, 96)
    font-weight bold
    text-transform uppercase

  &-button
    margin 6px 6px 0
    display block
    height 48px
    color #333
    border 1px solid #888;
    background rgba(255,255,255,0.3)
    text-align center
    line-height 46px

.toolbar
  display         flex
  justify-content space-between
  padding         12px 6px 0

  .section
    display flex

    .btn
      cursor  pointer
      padding 3px 6px
      margin  0 3px
      &:hover
        background rgba(0,0,0,0.3)

.sequencer
  margin      12px
  display     flex
  align-items center

  &-label
    font-weight bold
    width       72px

  &-body
    flex-grow  1
    background rgba(0,0,0,0.3)
    height     30px
    display    flex

  &-cell
    flex-grow 1
    &:hover
      background rgba(255,255,255,0.1)
    &.active
      background    linear-gradient(to bottom, tomato, red)
      border-radius 2px
      border-top    1px solid rgba(255,255,255,0.5)
      &:hover
        background red
