/// DEVICE: SAMPLER

.sampler
  &-clips
    cursor default
    width 100%

  &-clip > td
    padding 5px 0
    vertical-align top

  &-clip-add
    display inline-block
    cursor pointer
    &:hover
      background rgba(255,255,255,0.1)

  &-clip, &-clip-add
    line-height 14px
    padding 5px 0

