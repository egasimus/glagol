*
  box-sizing border-box

body
  background #f2f2f2
  color #424242
  margin 6px 0
  font-family monospace
  font-size 13px
  line-height 18px


.form
  position relative
  padding 5px
  margin-left 48px
  display block
  cursor pointer

  &:hover 
    background #fff

  &.active
    background #fff
    border-left 2px solid #ddd
    margin-left 46px

  label
    position absolute
    display inline-block
    top 6px
    height 20px
    width auto
    right 100%
    text-transform uppercase
    font-size 0.75em
    text-align right
    color #5f5f5f
    padding-right 6px

  .name
    font-weight bold

  .code
    white-space pre
    border 1px solid transparent
    background transparent
    &[contenteditable]
      background white
    &:focus
      border 1px solid #ddd;
      outline none

.toolbar
  position fixed
  z-index 0
  bottom 24px
  left 0
  right 0
  height 36px
  display flex
  padding 3px 0
  justify-content flex-end

  &-button
    display inline-block
    //height 36px
    line-height 24px
    padding 3px 6px
    margin 0
    cursor pointer
    &:hover
      border 1px solid #ddd
      padding 2px 5px
    &:active
      background white

.tab-bar
  position fixed
  z-index 1
  bottom 0
  left 0
  right 0
  height 24px
  background #ddd
  display flex

  &-file
    height 24px
    line-height 24px
    padding 0 6px
    cursor pointer

    &.active
      background #f2f2f2
      font-weight bold

    &:hover
      background #fff
