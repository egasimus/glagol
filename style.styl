*
  box-sizing border-box

body
  background #fafafa
  color #424242
  margin 6px 0

.form
  font-family monospace
  font-size 13px
  line-height 18px

  position relative
  padding 6px
  margin-left 48px
  display block
  cursor pointer
  &:hover 
    background #f0f0f0

  label
    position absolute
    display inline-block
    top 7px
    height 20px
    width auto
    right 100%
    text-transform uppercase
    font-size 0.75em
    text-align right
    color #5f5f5f
    padding-right 3px

  .name
    font-weight bold

  .code
    white-space pre
