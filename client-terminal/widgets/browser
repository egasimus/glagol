    (fn [opts]
      (let [defaults
              { :top 0 :bottom 0 :left 0 :width 40 :focused true :mouse true
                :style { :bg :black :focus { :bg :black :fg :yellow } } }
            l
              (b.List (merge defaults opts))]
        (l.key [:down  :j] (fn [] (l.down 1)))
        (l.key [:up    :k] (fn [] (l.up   1)))
        (l.key [:enter :a] (fn [] (../events/emit :add-sample l.selected)))
        l))

