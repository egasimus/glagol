    //color #555
    //text-align center
    //font-size 30px
    //line-height 30px
    //background #ddd
    //width 48px
    //height 36px
    //box-shadow 0 0 6px #333
    //margin 0 6px
    //transition 0.2s background
    //outline 3px solid rgba(0,0,0,0.1)
    //border-top 1px solid white
    //border-bottom 2px solid #999
    //&:hover
      //background #f0f0f0
    &.Playing
      background #ccaa26
      color white
      //border-top 1px solid #ddcc37
      //border-bottom 1px solid #aa8810
      &:hover
        text-shadow 0 0 3px white, 0 0 3px white
        //background #ddcc37
  audio
    display none
  &_Waveform, canvas
    width 100%
    height 100px
  &_Spectrogram
    margin 6px
  &_Cues
    display flex
    flex-direction row
    flex-wrap wrap
    max-height 96px
    outline 3px solid rgba(0,0,0,0.1)
  &_Cue
    background #ddd
    margin 0 2px 2px 0
    border-top 1px solid white
    border-bottom 2px solid #999
    padding 2px
    line-height 12px

.CodeMirror
  background rgba(33,33,33,0.8)
  transition background 0.2s
  color #ddd
  &-focused
    background rgba(25,25,25,0.8)
  &-gutters
    background none
    border-right 1px solid #444
  &-cursor
    border-left 2px solid #888
  &-linenumber
    color #777
