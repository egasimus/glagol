.Knob
  cursor pointer
  &:before
    content ''
    width 30px
    display block
    background #333
    border 1px solid #555
    box-shadow 0 1px 2px #000
    height 30px
    border-radius 36px
  &:after
    content ''
    background #555
    position absolute
    top 3px
    height 50%
    left 50%
    right 50%
    margin 0 -2px
  &_Label
    cursor pointer
    display flex
    align-items center
    justify-content space-between
    background rgba(0,0,0,0.3)
    padding 8px 6px
    flex-direction row-reverse
    color #aaa
    &:hover
      color #ccc
    &_Text
      text-align right
      padding 0 6px
      text-transform uppercase
      letter-spacing 1px
      line-height 14px
    &+.Mixer_Knob_Label
      padding-top 0
  &_Group
    &, &_WithFader
      margin 0 3px 3px 0
      display flex
      flex-direction column
    &_WithFader
      flex-grow 1
    :nth-child(2n)
      flex-direction row
      .Mixer_Knob_Label_Text
        text-align left
    select
      background none
      border none
      color #ddd
      height 30px
      line-height 18px
      margin 6px
      width 90px

.FaderAndMeter
  min-height 100px
  flex-grow 1
  background rgba(0,0,0,0.3)
  display flex

.Fader,
.Meter
  width 50%

.Fader
  &:before
    content ''
    position absolute
    left 50%
    right 50%
    top 0
    bottom 0
    margin 0 -1px
    background #111
  &:after
    content ''
    top 20%
    height 18px
    position absolute
    left 6px
    right 6px
    background #333
    box-shadow 0 1px 2px #000
    border 1px solid #555

.Meter
  overflow hidden
  &:before
    content ''
    background #111
    position absolute
    top 3px
    bottom 3px
    left 3px
    right 3px
  &:after
    content ''
    background #141414
    position absolute
    top 6px
    bottom 6px
    left 6px
    right 6px
  &_Inner
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background #ccaa26
    z-index 1
