*
  box-sizing border-box
  position   relative

body
  margin     0
  display    flex
  flex-flow  row wrap

body > section
  flex-grow 1

.embed-error-container
  display         flex
  flex-direction  column
  justify-content center
  align-items     center
  width       100%
  height      100%
  background  #333
  color       #fff
  font-family Inconsolata, monospace
  font-size   13px
  line-height 18px
  text-shadow 0 1px 0 black

.embed-reload
  cursor pointer
  border 2px solid #aaa
  padding 4px 10px
  margin-top 12px
  border-radius 3px
