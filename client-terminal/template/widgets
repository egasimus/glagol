    box))

  ".toolbar-play"
  (fn [] (let
    [box (./bless/Box { :align :center :left "50%-3" :width 5 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
        (./bless/Text { :left 1 :right 1 :top 1 :height 1 :bg "#111111" :fg :yellow :content " ▶ "})
        (./bless/Box  { :left 0 :right 0 :top 2 :height 1 :ch "▀" :bg nil :fg "#111111"}) ]
      (box.append.bind box) )
    box))

  ".toolbar-record"
  (fn [] (let
    [box (./bless/Box { :align :center :left "50%+3" :width 5 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
        (./bless/Text { :left 1 :right 1 :top 1 :height 1 :bg "#111111" :fg :yellow :content "REC"})
        (./bless/Box  { :left 0 :right 0 :top 2 :height 1 :ch "▀" :bg nil :fg "#111111"}) ]
      (box.append.bind box) )
    box))

  ".toolbar-rewind"
  (fn [] (let
    [box (./bless/Box { :align :center :left "50%-9" :width 5 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
        (./bless/Text { :left 1 :right 1 :top 1 :height 1 :bg "#111111" :fg :yellow :content "|<<"})
        (./bless/Box  { :left 0 :right 0 :top 2 :height 1 :ch "▀" :bg nil :fg "#111111"}) ]
      (box.append.bind box) )
    box))

  ".toolbar-midi"
  (fn [] (let
    [box (./bless/Box { :right 8 :width 5 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
        (./bless/Text { :left 1 :right 1 :top 1 :height 1 :bg "#111111" :fg :yellow :content "MIDI"})
        (./bless/Box  { :left 0 :right 0 :top 2 :height 1 :ch "▀" :bg nil :fg "#111111"}) ]
      (box.append.bind box) )
    box))

  ".toolbar-midi-in"
  (fn [] (let
    [box (./bless/Box { :right 4 :width 3 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
        (./bless/Text { :left 1 :right 1 :top 1 :height 1 :bg "#111111" :fg :yellow :content "↓"})
        (./bless/Box  { :left 0 :right 0 :top 2 :height 1 :ch "▀" :bg nil :fg "#111111"}) ]
      (box.append.bind box) )
    box))

  ".toolbar-midi-out"
  (fn [] (let
    [box (./bless/Box { :right 0 :width 3 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
        (./bless/Text { :left 1 :right 1 :top 1 :height 1 :bg "#111111" :fg :yellow :content "↑"})
        (./bless/Box  { :left 0 :right 0 :top 2 :height 1 :ch "▀" :bg nil :fg "#111111"}) ]
      (box.append.bind box) )
    box))

  ".toolbar-osc"
  (fn [] (let
    [box (./bless/Box { :right 23 :width 5 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
