(let [path    (require :path)
      glob    (require :glob)
      fs      (require :fs)

      files   (glob.sync (path.join ./options/sounds-dir "**" "*.wav"))
      data    (files.map (fn [f i arr]
                (log.as :analyzing
                  (str i "/" arr.length)
                  (path.relative ./options/sounds-dir f))
                (assoc (./soxi/analyze f) :path f)))]

  data)
