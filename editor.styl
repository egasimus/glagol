body-bg          = #f2f2f2
body-fg          = #424242
button-active-bg = #ffffff
button-border-fg = #dddddd
form-active-bg   = #fafafa
form-label-fg    = #5f5f5f
tab-active-bg    = #f2f2f2
tab-bar-bg       = #dddddd

.container

  height         100%
  display        flex
  flex-direction row

  font-family Inconsolata, monospace
  font-size   13px
  line-height 18px

  background  body-bg
  color       body-fg

  input, textarea
    font-family Inconsolata, monospace
    font-size   13px
    line-height 18px

  .editor
    flex-grow  1.618
    overflow-y auto

    &-atom
      margin     6px
      padding    6px

      &.selected
        background white

      &-name
        font-weight bold

      &-source
        white-space pre

      &-btn
        display  none

      &-result
        padding     0px 12px
        font-weight bold
        margin      0px 0px
        background  #66ff99

        &.error
          background  #ff9966

      &:hover .editor-atom-btn
        display  block
        cursor   pointer
        position absolute
        top      6px
        right    6px
        padding  0 6px

        &:hover
          background white

  .sidebar
    width          250px
    z-index        1
    background     tab-bar-bg
    display        flex
    flex-direction column
    overflow       hidden

    &-list-title
      text-transform uppercase
      font-weight    bold
      padding        6px 6px 0

      &.inactive
        color #777

    &-list-body
      list-style none
      margin     0
      padding    0

    &-list-item
      cursor      pointer
      white-space pre
      padding     0 6px

      &.selected
        background body-bg

      &:hover
        color black

    .tab
      height      24px
      line-height 24px
      padding     0 6px
      cursor      pointer

      &.active
        background  tab-active-bg
        font-weight bold

  .form
    position relative
    padding  5px 5px 5px 48px
    display  block
    cursor   pointer

    &.active
      background form-active-bg

    .type
      position absolute
      display inline-block
      height 24px
      width auto
      left 8px
      text-transform uppercase
      font-size 0.75em
      text-align right
      color form-label-fg
      padding-right 6px

    .name
      font-weight bold
      width 100%
      border none
      background none
      &:focus
        outline none

    .code
      margin-left 16px

  .toolbar
    flex-shrink 0
    z-index 0
    height 36px
    display flex
    padding 3px 0
    justify-content flex-end

    &-button
      display inline-block
      //height 36px
      line-height 24px
      padding 3px 6px
      margin 0
      cursor pointer
      &:hover
        border 2px solid button-border-fg
        padding 1px 4px
      &:active
        background button-active-bg
