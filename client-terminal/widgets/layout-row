(let [renderer
        (fn row-renderer [coords]
          (let [left 0]
            (fn row-renderer-iterator [el i]
              (set! el.shrink          true)
              (set! el.position.top    0)
              (set! el.position.bottom 0)
              (set! el.position.left   left)
              (set! left (+ left el.width)))))]
  (fn layout-row [opts]
    (../bless/Layout
      (merge { :renderer renderer } opts))))


