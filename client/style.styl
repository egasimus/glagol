body, table, input, select, textarea, button
  font-family monospace
  font-size 12px

table
  margin 0
  min-width 100%

td, th
  text-align left
  vertical-align top

th
  font-weight bold
  text-transform uppercase
  letter-spacing 1px

button
  font-weight bold
  background white
  border 2px solid #555
  color #111
  margin 3px
  padding 3px 6px
  cursor pointer

input[type=text]
  font-weight bold
  background white
  border none
  border-bottom 2px solid #aaa
  text-align center
  color #333

.ButtonLink
  color #888
  text-decoration none
  border-bottom 2px solid #888
  cursor pointer

.Body
  &.Blank
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center

.TabBar
  display flex

.Tab
  flex-grow 1
  padding 6px 3px
  border-bottom 2px solid #555
  &Add
    flex-grow 0
    width 36px
    line-height 24px
    font-size 36px
    text-align center
    cursor pointer
