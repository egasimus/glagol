(let [path    (require :path)
      glob    (require :glob)
      fs      (require :fs)

      files   (glob.sync (path.join ./options/sounds-dir "**" "*.wav"))
      data    (files.map (fn [f i arr]
                (let [shortpath (path.relative ./options/sounds-dir f)]
                  (log.as :analyzing (str i "/" arr.length) shortpath)
                  (assoc (./soxi/analyze f) :path shortpath :fullpath f))))]

  data)
