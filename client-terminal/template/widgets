  ".toolbar-kbd-in"
  (fn [] (let
    [box (./bless/Box { :right 30 :width 3 :top 0 :height 3 :color :red :bg "#111111"})]
    (.map
      [ (./bless/Box  { :left 0 :right 0 :top 0 :height 1 :ch "▄" :bg nil :fg "#111111"})
        (./bless/Text { :left 1 :right 1 :top 1 :height 1 :bg "#111111" :fg :yellow :content "↓"})
        (./bless/Box  { :left 0 :right 0 :top 2 :height 1 :ch "▀" :bg nil :fg "#111111"}) ]
      (box.append.bind box) )
    box))

  ".statusbar"
  (fn [] (let
    [box (./bless/Box { :bottom -1 :height 1 :left 1 :right 1 })]
    box))

  ".text"
  (fn [] (./bless/Box))

  ".session"
  (fn [] (./bless/Box))

  ".mixer"
  (fn [] (./bless/Box { :bottom 0 :height 15 :left 1 :right 1 :bg "#111111" }))

  ".mixer-track"
  (fn [opts] (let [box (./bless/Box (merge { :left 0 :top 0 :width 9 :height 15 } (assoc opts :color nil :name nil)))]
    (box.append (./bless/Text { :bottom 0 :height 1 :left 1 :right 0 :content opts.name}))
    (box.append (./bless/Box { :bottom -1 :height 1 :left 0 :right 0 :ch "▄" :bg nil :fg opts.color}))
    (box.append (./bless/Box { :bottom 2 :height (Math.round (* 10 (Math.random))) :right 1 :width 2 :bg :green }))
    (box.append (./bless/Text { :bottom 13 :left 0 :content "   0 dB " :fg :black}))
    (box.append (./bless/Text { :bottom 11 :left 0 :content "  -6 " :fg :black}))
    (box.append (./bless/Text { :bottom 9 :left 0 :content " -12 " :fg :black}))
    (box.append (./bless/Text { :bottom 7  :left 0 :content " -18 " :fg :black}))
    (box.append (./bless/Text { :bottom 5  :left 0 :content " -24 " :fg :black}))
    (box.append (./bless/Text { :bottom 3  :left 0 :content " -48 " :fg :black}))
    (box.append (./bless/Text { :bottom 3  :left 0 :content " -60 " :fg :black}))
    ;(box.append (./bless/Text { :bottom 10 :left 1 :content " FX " :bg "#111111"}))
    ;(box.append (./bless/Text { :bottom 8 :left 1 :content " IO " :bg "#111111"}))
    ;(box.append (./bless/Text { :bottom 6 :left 1 :content " M " :bg "#111111"}))
    ;(box.append (./bless/Text { :bottom 4 :left 1 :content " S " :bg "#111111"}))
    ;(box.append (./bless/Text { :bottom 2 :left 1 :content " R " :bg "#111111"}))
    box))

}
