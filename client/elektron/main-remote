(fn [root]
  (let [path (require :path)
        index-url "http://localhost:1620"
        app (require :app)
        BrowserWindow (require :browser-window)
        main-window nil]
    (.start (require :crash-reporter))
    (app.on :ready (fn []
      (log.as :opening index-url)
      (set! main-window (BrowserWindow. {}))
      (main-window.open-dev-tools)
      (main-window.on :closed (fn [] (set! main-window nil)))
      (main-window.load-url index-url)))))
