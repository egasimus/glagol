(let [

  index
    0

  step
    (fn []
      (log.as :step index)
      (.map (keys ./tracks)
        (fn [t] (let [track (aget ./tracks t)]
          (if (aget track.seq index) (track.chain.play)))))
      (set! index (if (< index 7) (+ index 1) 0)))

  ] (./transport/each (str (* 500 (/ 60 ./transport/tempo)) :m) step))
