(fn statusbar [parent]
  (let [content
          (.reduce (keys ./keymap) (fn [a b]
            (str a "{red-bg}" (.join (aget ./keymap b) "{/red-bg} {red-bg}")
                   "{/red-bg} {black-bg}" b "{/black-bg}  ")) "")]
    (parent.append (./bless/text {
      :tags true
      :content content
      ;:content "{red-bg}q{/red-bg} exits  {red-bg}space{/red-bg} plays"
      :bg :black
      :fg :yellow
      :left 1
      :right 1
      :bottom 0
      :height 1 }))))
