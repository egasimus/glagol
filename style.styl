jylto = #ccaa26

body
  background black
  color      white

.sequencer
  margin      12px 0 0
  display     flex
  align-items center
  background  rgba(255,255,255,0.1)

  &-label
    position    absolute
    z-index     1
    color       white
    text-shadow 0 1px 0 black
    margin-left 3px
    font-weight bold

  &-body
    flex-grow  1
    background rgba(0,0,0,0.3)
    height     30px
    display    flex

  &-cell
    flex-grow 1
    &:hover
      background rgba(255,255,255,0.1)
    &.active
      background jylto
      border-radius 2px
      border-top    1px solid rgba(255,255,255,0.5)
      &:hover
        background    linear-gradient(to bottom, jylto, red)
