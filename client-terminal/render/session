(fn render-session [screen]
  (let [session-box
          (../bless/box { :top 3 :left 1 :right 1 :bottom 1 :scrollable true })
        render-scene
          (.bind ./scene nil session-box)
        render-track  
          (.bind ./track nil session-box)]
    (screen.append session-box)
    (let [scenes (../util/scene-positions ../session/score)]
      (.map (keys scenes) (fn [i]
        (let [scene (aget scenes i)]
          (render-scene (Number i) scene.label)))))
    (.map (keys ../session/tracks) render-track)
    screen))
