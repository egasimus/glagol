(let [renderer
        (fn column-renderer [coords]
          (let [top 0]
            (fn column-renderer-iterator [el i]
              (set! el.shrink         true)
              (set! el.position.left  0)
              (set! el.position.right 0)
              (set! el.position.top   top)
              (set! top (+ top el.height)))))]
  (fn layout-column [opts]
    (../bless/Layout
      (merge { :renderer renderer } opts))))

